<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    android:id="@+id/rl"
    android:fitsSystemWindows="true"
    tools:context="com.starsearth.five.activity.TaskActivity">

    <ImageView
        android:id="@+id/img_red"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#FF0000" />

    <ImageView
        android:id="@+id/img_green"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#00FF00" />

    <!-- COMPLETED TOTAL IS USED AS TOP ITEM IF UNTIMED TASK AND MULTIPLE ITEMS -->
    <TextView
        android:id="@+id/tv_completed_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_tap_screen_to_hear_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/tap_screen_to_hear_text_again"
        android:layout_below="@id/tv_completed_total"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_centerHorizontal="true" />
    <!-- END -->

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@id/tv_tap_screen_to_hear_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="1:00" />



    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_timer"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="5dp" />

</RelativeLayout>
